<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buca_background"
    tools:context="com.example.emre.buca.MainActivity">

    <ImageView
        android:id="@+id/imageView_logo_main"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_email_giris"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/bucalogomain" />

    <EditText
        android:id="@+id/editText_email_giris"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_below="@+id/imageView_logo_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editText_sifre_giris"
        android:layout_width="300dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/editText_email_giris"
        android:layout_below="@+id/editText_email_giris"
        android:layout_marginTop="19dp"
        android:background="#11000000"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_Giris_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/editText_sifre_giris"
        android:layout_below="@+id/editText_sifre_giris"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/giris_button_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_giris_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Giriş"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView2_uye_degilmisiniz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView_Giris_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Üye değil misiniz? Hemen"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/textView3_kayıt_ol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2_uye_degilmisiniz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Kayıt Olun!"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>
