<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/buca_background"
    tools:context="com.example.emre.buca.MainActivity">

    <ImageView
        android:id="@+id/imageView_bucalogo"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/bucalogomain" />

    <EditText
        android:id="@+id/editText_uyekayit_ad"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_uyekayit_telefon"
        android:layout_below="@+id/imageView_bucalogo"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ad"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="textStart"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editText_uyekayit_soyad"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_uyekayit_ad"
        android:layout_alignBottom="@+id/editText_uyekayit_ad"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Soyad"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editText_uyekayit_email"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_uyekayit_ad"
        android:layout_below="@+id/editText_uyekayit_ad"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="E-mail"
        android:textColorHint="#ffffff"
        />

    <EditText
        android:id="@+id/editText_uyekayit_telefon"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_uyekayit_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Telefon"
        android:textColorHint="#ffffff"/>

    <EditText
        android:id="@+id/editText_uyekayit_dogumtarihi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_uyekayit_telefon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Doğum Tarihi"
        android:textColorHint="#ffffff"/>

    <EditText
        android:id="@+id/editText_uyekayit_sifre"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton_erkek"
        android:layout_below="@+id/editText_uyekayit_dogumtarihi"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Şifre"
        android:textColorHint="#fff"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText_uyekayit_sifretekrar"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_uyekayit_sifre"
        android:layout_below="@+id/editText_uyekayit_sifre"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Şifre Tekrar"
        android:textColorHint="#fff"
        android:inputType="textPassword" />

    <RadioButton
        android:id="@+id/radioButton_erkek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_uyekayit_telefon"
        android:layout_below="@+id/editText_uyekayit_sifretekrar"
        android:layout_marginTop="13dp"
        android:text="Erkek"
        android:textColor="#ffffff"/>

    <RadioButton
        android:id="@+id/radioButton_kadin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton_erkek"
        android:layout_alignBottom="@+id/radioButton_erkek"
        android:layout_alignEnd="@+id/editText_uyekayit_ad"
        android:text="Kadın"
        android:textColor="#ffffff" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_Kay_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/radioButton_erkek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/kayitol_button_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_giris_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Kayıt Ol"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</ RelativeLayout>
